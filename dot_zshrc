prompt_context(){}

#########################################
# Functions - start
#########################################
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function clg() {
  local orig_dir="$PWD"
  local chezmoi_dir
  chezmoi_dir=$(chezmoi source-path)

  cd "$chezmoi_dir" || return
  lazygit
  cd "$orig_dir" || return
}
#########################################
# Functions - end
#########################################


#########################################
# alias - start
#########################################
alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"
alias yazi="y"
alias lg="lazygit"
#########################################
# alias - end
#########################################

