# Open Alacritty (new instance)
cmd + alt - return : open -na Alacritty

# Open Alacritty in Finder's directory (only sets working directory if supported)
cmd + alt + ctrl - return : sh -c 'DIR=$(osascript -e "tell application \"Finder\" to set thePath to POSIX path of (target of Finder window 1 as alias)"); /Applications/Alacritty.app/Contents/MacOS/alacritty --working-directory "$DIR"'

# Open Obsidian
cmd + alt - o : open -a Obsidian

# Open Mail
cmd + alt - m : open -a Mail

# Open Gimp
cmd + alt - g : open -a Gimp

# Open Inkscape
cmd + alt - i : open -a Inkscape

# Open Safari
cmd + alt - s : open -a Safari

# Open new Finder window
cmd + alt - f : osascript -e "tell application \"Finder\" to make new Finder window to (POSIX file \"$(echo /Users/$USER)\")"

# Command + [N]: Create space N if it doesn't exist, then focus it
cmd - 1 : if ! yabai -m query --spaces | grep -q '"index":1'; then yabai -m space --create; fi; yabai -m space --focus 1
cmd - 2 : if ! yabai -m query --spaces | grep -q '"index":2'; then yabai -m space --create; fi; yabai -m space --focus 2
cmd - 3 : if ! yabai -m query --spaces | grep -q '"index":3'; then yabai -m space --create; fi; yabai -m space --focus 3
cmd - 4 : if ! yabai -m query --spaces | grep -q '"index":4'; then yabai -m space --create; fi; yabai -m space --focus 4
cmd - 5 : if ! yabai -m query --spaces | grep -q '"index":5'; then yabai -m space --create; fi; yabai -m space --focus 5
cmd - 6 : if ! yabai -m query --spaces | grep -q '"index":6'; then yabai -m space --create; fi; yabai -m space --focus 6
cmd - 7 : if ! yabai -m query --spaces | grep -q '"index":7'; then yabai -m space --create; fi; yabai -m space --focus 7
cmd - 8 : if ! yabai -m query --spaces | grep -q '"index":8'; then yabai -m space --create; fi; yabai -m space --focus 8
cmd - 9 : if ! yabai -m query --spaces | grep -q '"index":9'; then yabai -m space --create; fi; yabai -m space --focus 9
cmd - 0 : if ! yabai -m query --spaces | grep -q '"index":10'; then yabai -m space --create; fi; yabai -m space --focus 10

# Shift + Command + [N]: Create space N if it doesn't exist, then move window to it
shift + cmd - 1 : if ! yabai -m query --spaces | grep -q '"index":1'; then yabai -m space --create; fi; yabai -m window --space 1; yabai -m space --focus 1
shift + cmd - 2 : if ! yabai -m query --spaces | grep -q '"index":2'; then yabai -m space --create; fi; yabai -m window --space 2; yabai -m space --focus 2
shift + cmd - 3 : if ! yabai -m query --spaces | grep -q '"index":3'; then yabai -m space --create; fi; yabai -m window --space 3; yabai -m space --focus 3
shift + cmd - 4 : if ! yabai -m query --spaces | grep -q '"index":4'; then yabai -m space --create; fi; yabai -m window --space 4; yabai -m space --focus 4
shift + cmd - 5 : if ! yabai -m query --spaces | grep -q '"index":5'; then yabai -m space --create; fi; yabai -m window --space 5; yabai -m space --focus 5
shift + cmd - 6 : if ! yabai -m query --spaces | grep -q '"index":6'; then yabai -m space --create; fi; yabai -m window --space 6; yabai -m space --focus 6
shift + cmd - 7 : if ! yabai -m query --spaces | grep -q '"index":7'; then yabai -m space --create; fi; yabai -m window --space 7; yabai -m space --focus 7
shift + cmd - 8 : if ! yabai -m query --spaces | grep -q '"index":8'; then yabai -m space --create; fi; yabai -m window --space 8; yabai -m space --focus 8
shift + cmd - 9 : if ! yabai -m query --spaces | grep -q '"index":9'; then yabai -m space --create; fi; yabai -m window --space 9; yabai -m space --focus 9
shift + cmd - 0 : if ! yabai -m query --spaces | grep -q '"index":10'; then yabai -m space --create; fi; yabai -m window --space 10; yabai -m space --focus 10

cmd + shift - h : yabai -m window --focus west
cmd + shift - l : yabai -m window --focus east
cmd + shift - k : yabai -m window --focus north
cmd + shift - j : yabai -m window --focus south

ctrl + cmd - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + cmd - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + cmd - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0
